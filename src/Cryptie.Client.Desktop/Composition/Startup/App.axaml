<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Cryptie.Client.Desktop.Composition.Startup.App"
             RequestedThemeVariant="Default"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:views="clr-namespace:Cryptie.Client.Desktop.Views"
             xmlns:vm="clr-namespace:Cryptie.Client.Desktop.ViewModels"
             xmlns:locators="clr-namespace:Cryptie.Client.Desktop.Composition.Locators">
    <Application.DataTemplates>
        <locators:ViewLocator />
        <DataTemplate DataType="vm:RegisterViewModel">
            <views:RegisterView />
        </DataTemplate>
        <DataTemplate DataType="vm:LoginViewModel">
            <views:LoginView />
        </DataTemplate>
    </Application.DataTemplates>

    <Application.Styles>
        <semi:SemiTheme Locale="en-US" />
        <semi:DataGridSemiTheme />
        <semi:TreeDataGridSemiTheme />
    </Application.Styles>
</Application>