<!-- ReSharper disable Xaml.StyleClassNotFound -->
<!-- ReSharper disable Xaml.StaticResourceNotResolved -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Cryptie.Client.Features.Messages.ViewModels"
             mc:Ignorable="d"
             x:Class="Cryptie.Client.Features.Messages.Views.GroupsListView"
             x:DataType="viewModels:GroupsListViewModel">
    <Grid RowDefinitions="Auto,*">
        <Grid Row="0"
              VerticalAlignment="Center"
              ColumnDefinitions="*,Auto">
            <TextBlock Grid.Column="0"
                       Text="Friends"
                       Theme="{StaticResource TitleTextBlock}"
                       Classes="H4"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0" />
            <Button Grid.Column="1"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Width="48" Height="48"
                    CornerRadius="0"
                    Margin="5,0,0,0">
                <TextBlock FontFamily="{StaticResource PhosphorRegular}"
                           Text="user-plus"
                           FontSize="20" />
            </Button>
        </Grid>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Friends}"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.AllowAutoHide="False">
            <ListBox.Styles>
                <Style Selector="ListBoxItem">
                    <Setter Property="Padding" Value="8,12" />
                    <Setter Property="Margin" Value="0,0,18,0" />
                </Style>

                <Style Selector="ScrollBar[Orientation=Vertical]">
                    <Setter Property="Margin" Value="0,0,5,0" />
                </Style>
            </ListBox.Styles>

            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid ColumnDefinitions="Auto,*"
                          VerticalAlignment="Center"
                          Margin="0">
                        <TextBlock Grid.Column="0"
                                   FontFamily="{StaticResource PhosphorRegular}"
                                   Text="user-circle"
                                   FontSize="20"
                                   Margin="0,0,4,0" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding}"
                                   FontSize="16"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>