<!-- ReSharper disable Xaml.StyleClassNotFound -->
<!-- ReSharper disable Xaml.StaticResourceNotResolved -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cryptie.Client.Features.Account.Views.AccountView">
    <Border Padding="24">
        <StackPanel Spacing="24">
            <TextBlock Theme="{StaticResource TitleTextBlock}"
                       Classes="H1">
                Account
            </TextBlock>

            <StackPanel Spacing="24" HorizontalAlignment="Left">
                <Button Content="Change Name"
                        Theme="{StaticResource SolidButton}"
                        Width="150"
                        Height="36" />
                <Button Content="Logout"
                        Theme="{StaticResource SolidButton}"
                        Width="150"
                        Height="36" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>